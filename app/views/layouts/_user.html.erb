<%= form_for @newuser do |f| %>
      <fieldset class="form-group">
        <%= f.text_field :username, :class => "form-control", :placeholder => "Username" %>
      </fieldset>
      <fieldset class="form-group">
        <%= f.text_field :email, :class => "form-control", :placeholder => "Valid email address." %>
      </fieldset>
      <fieldset class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
      </fieldset>
      <fieldset class="form-group">
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %>
      </fieldset>
      <fieldset class="form-group form-inline">
        <%= f.text_field :feet, :class => "form-control", :size => "13", :placeholder => "Feet" %>
        <%= f.text_field :inches, :class => "form-control", :size => "13", :placeholder => "Inches" %>
        <%= f.text_field :starting_weight, :class => "form-control", :size => "13", :placeholder => "Weight" %>
      </fieldset>
      <%= f.submit :class => "btn btn-primary btn-block submit-button" %>
      <small class="text-muted">*Please ensure all fields have been completed*</small>
    <% end %>
